<h1>Reset your password</h1>

<%= form_with model: @user, url: password_reset_path(:token params[:token]) do |form| %>
  <% if form.object.errors.any? %>
    <% form.object.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  <% end %>

  <div>
    <%= form.label :password %>
    <%= form.text_field :password, class: "form-control", placeholder: "password" %>
  </div>

  <div>
    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation, class: "form-control", placeholder: "password" %>
  </div>

  <div>
    <%= form.submit "Reset", class: "btn btn-primary"%>
  </div>
<% end %>
