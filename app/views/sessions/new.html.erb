<h1>Log in</h1>

<%= form_with model: @user, url: session_path do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "example@email.com" %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.text_field :password, class: "form-control", placeholder: "password" %>
  </div>

  <div>
    <%= form.submit "Log in", class: "btn btn-primary"%>
  </div>
<% end %>

<%= link_to "Forgot your password?", new_password_reset_path %>
